<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {% comment %} ESTILOS {% endcomment %}
    <link rel="stylesheet" href="{{ 'header-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'banner-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'shop-by-collection-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'uvps-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'social-proof-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'best-selling-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'reviews-style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'footer-style.css' | asset_url }}">



    {% comment %} FONTE {% endcomment %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

    
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}
    
    {{ content_for_header }}

    {% comment %} FONT AWESOME (icones) {% endcomment %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  </head>

  <body style="padding: 0; margin: 0">
      {% section 'header' %}
      {% section 'banner' %}
      {% section 'shop-by-collection' %}
      {% section 'uvps' %}
      {% section 'social-proof' %}
      {% section 'best-selling' %}
      {% section 'reviews' %}
      {% section 'best-selling2' %}
      {% section 'faqs' %}
      {% section 'footer' %}

      <main role="main" tabindex="-1">
        {{ content_for_layout }}
      </main>
  </body>

</html>
