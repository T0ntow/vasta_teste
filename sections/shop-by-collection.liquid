<!-- Seção "Shop by Collection" -->
<section class="shop-by-collection">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="collection-slider">
      <div class="collection-items">
        <button class="nav-button prev">
          <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </button>

        {% for block in section.blocks %}
          <div class="collection-item" style="background-image: url('{{ block.settings.image | image_url }}');">
            <a href="{{ block.settings.link }}">
              <div class="collection-item-text">
                <h3>{{ block.settings.text }}</h3>
              </div>
            </a>
          </div>
        {% endfor %}

        <button class="nav-button next">
          <i class="fa fa-arrow-right" aria-hidden="true"></i>
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .collection-item {
    flex: 0 0 243px;
    width: 243px;
    height: 363px;
    position: relative;
    border-radius: 13px;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    cursor: pointer;
  }

  .collection-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180.05deg, rgba(33, 33, 33, 0.0945) 16.36%, rgba(0, 0, 0, 0.504) 83.6%);
    border-radius: 13px;
    z-index: 1;
  }

  .collection-item:hover::before {
    background: linear-gradient(180.05deg, rgba(231, 231, 231, 0.095) 16.36%, rgba(138, 138, 138, 0.504) 83.6%);
  }

  .collection-item:hover .collection-item-text {
    transition: all .3s ease;
    color: #1f1f1f; /* Muda a cor do texto para preto */
}


</style>

{% schema %}
  {
    "name": "Shop by Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Shop by Collection"
      }
    ],
    "blocks": [
      {
        "type": "collection_item",
        "name": "Collection Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Coleção"
          }, {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text",
            "default": "Imagem da Coleção"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Shop by Collection",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const collectionSlider = document.querySelector('.collection-items');
    const prevButton = document.querySelector('.nav-button.prev');
    const nextButton = document.querySelector('.nav-button.next');
  
    // Função para rolar para a esquerda
    prevButton.addEventListener('click', function() {
      collectionSlider.scrollBy({
        left: -300, 
        behavior: 'smooth'
      });
    });
  
    // Função para rolar para a direita
    nextButton.addEventListener('click', function() {
      collectionSlider.scrollBy({
        left: 300,
        behavior: 'smooth'
      });
    });
  });
</script>