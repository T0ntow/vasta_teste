<!-- Seção "Shop by Collection" -->
<section class="shop-by-collection">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="collection-slider">
      {% for block in section.blocks %}
      <div class="collection-item">
        <a href="{{ block.settings.link }}">
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.alt_text }}">
          <div class="collection-item-text">
            <h3>{{ block.settings.text }}</h3>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop by Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Collection"
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Image Alt Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Collection",
      "category": "Custom Sections"
    }
  ]
}

{% endschema %}