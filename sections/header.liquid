{% schema %}
{
  "name": "Header Section",
  "settings": [
    {
      "type": "text",
      "id": "email_address",
      "label": "Email Address",
      "default": "info@brandssss.com"
    },
    {
      "type": "text",
      "id": "shipping_message",
      "label": "Shipping Message",
      "default": "WE PAY SHIPPING ON ORDERS OVER $X"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#000000"
    }
  ]
}
{% endschema %}

<header>
  <!-- Top bar with contact and shipping info -->
  <div class="header-top-bar">
    <div class="header-top-bar-content">
      <!-- Email -->
      <div>
        <a href="mailto:{{ section.settings.email_address }}" class="contact-link">
          <i class="fa fa-envelope"></i> 
          {{ section.settings.email_address }}
        </a>
      </div>
      <div>{{ section.settings.shipping_message }}</div>
      <div>
        <a href="tel:+11112223333" class="contact-link">
          <i class="fa fa-phone"></i> +1 (111) 222-3333
        </a>
      </div>
    </div>
  </div>

  <!-- Main header with logo, search bar, and cart -->
  <div class="main-header">
    <!-- Logo -->
    <div class="logo">
      <a href="/">
        <img src="{{ 'logoDark.png' | asset_url }}" alt="Vasta Logo" width="140" height="42" class="logo-img">
      </a>
    </div>

    <!-- Search bar -->
    <div class="search-bar">
      <form action="/search" method="get" role="search" class="search-form">
        <div class="search-input-container">
          <input type="text" name="search" placeholder="Search Lorem Ipsum">
          <button type="submit" class="search-button">
            Search
            <i class="fa fa-search"></i>
          </button>
        </div>
      </form>
    </div>

    <!-- Cart icon -->
    <div class="cart">
      <a href="/cart" class="cart-link">
        <i class="fa fa-shopping-cart cart-icon"></i>
        <span class="cart-count">{{ cart.item_count }}</span>
      </a>
      <span>CART</span>
    </div>
  </div>

  <!-- Navigation menu -->
  <nav class="navigation-menu">
    <ul class="nav-list">
      <li class="nav-item">
        <a href="#" class="nav-link">Lorem Ipsum</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">Lorem Ipsum</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">Lorem Ipsum</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">Lorem Ipsum</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">All</a>
      </li>
    </ul>
  </nav>
</header>
