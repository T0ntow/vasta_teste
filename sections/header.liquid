{% schema %}
{
  "name": "Header Section",
  "settings": [
    {
      "type": "text",
      "id": "email_address",
      "label": "Email Address",
      "default": "info@brandssss.com"
    },
    {
      "type": "text",
      "id": "shipping_message",
      "label": "Shipping Message",
      "default": "WE PAY SHIPPING ON ORDERS OVER $X"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#000000"
    }
  ]
}
{% endschema %}


<header>
  <!-- Top bar with contact and shipping info -->
  <div style="background-color: #000; color: #fff; padding: 10px 0; text-align: center;">
    <div style="display: flex; justify-content: space-between; max-width: 1200px; margin: 0 auto; padding: 0 20px;">
      <!-- Email -->
      <div>
        <a href="mailto:{{ settings.email_address }}" style="color: #fff; text-decoration: none;">
          <i class="fa fa-envelope"></i> {{ settings.email_address }}
        </a>
      </div>
      <div>WE PAY SHIPPING ON ORDERS OVER $X</div>
      <div>{{ settings.shipping_message }}</div>
      <div>
        <a href="tel:+11112223333" style="color: #fff; text-decoration: none;">
          <i class="fa fa-phone"></i> +1 (111) 222-3333
        </a>
      </div>
    </div>
  </div>

  <!-- Main header with logo, search bar, and cart -->
  <div style="max-width: 1200px; margin: 0 auto; padding: 20px 0; display: flex; justify-content: space-between; align-items: center;">
    <!-- Logo -->
    <div>
      <a href="/" >
          <img src="{{ 'logoDark.png' | asset_url }}" alt="Vasta Logo" width="140" height="42" style="width: 140px; height: 42px;">
      </a>
    </div>

    <!-- Search bar -->
    <div style="flex-grow: 2; padding: 0 20px;">
      <form action="/search" method="get" role="search" style="display: flex; align-items: center;">
        <input type="text" name="search" placeholder="Search Lorem Ipsum" style="width: 100%; padding: 10px; border-radius: 25px; border: 1px solid #ccc;">
        <button type="submit" style="background-color: #fff; border: none; cursor: pointer;">
          <i class="fa fa-search"></i> Search
        </button>
      </form>
    </div>

    <!-- Cart icon -->
    <div>
      <a href="/cart" style="color: #000; text-decoration: none; position: relative;">
        <i class="fa fa-shopping-cart" style="font-size: 24px;"></i>
        <span style="background-color: green; color: white; border-radius: 50%; padding: 2px 8px; position: absolute; top: -10px; right: -10px;">{{ cart.item_count }}</span>
      </a>
      <span>CART</span>
    </div>
  </div>

  <!-- Navigation menu -->
  <nav style="background-color: #f8f8f8; padding: 10px 0;">
    <ul style="list-style: none; display: flex; justify-content: center; padding: 0;">
      <li style="margin: 0 15px;">
        <a href="#" style="color: #000; text-decoration: none;">Lorem Ipsum</a>
      </li>
      <li style="margin: 0 15px;">
        <a href="#" style="color: #000; text-decoration: none;">Lorem Ipsum</a>
      </li>
      <li style="margin: 0 15px;">
        <a href="#" style="color: #000; text-decoration: none;">Lorem Ipsum</a>
      </li>
      <li style="margin: 0 15px;">
        <a href="#" style="color: #000; text-decoration: none;">Lorem Ipsum</a>
      </li>
      <li style="margin: 0 15px;">
        <a href="#" style="color: #000; text-decoration: none;">All</a>
      </li>
    </ul>
  </nav>
</header>